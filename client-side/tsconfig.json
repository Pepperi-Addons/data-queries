{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "module": "ES2020",
        "target": "ES2020",
        "lib": [
            "es2018",
            "dom"
        ]
    },
    "files": [
        "src/main.ts",
        "src/polyfills.ts"
    ],
    "include": [
        "src/**/*.d.ts",
        "src/app/query_manager/index.ts"
    ],
    "angularCompilerOptions": {
        "allowSyntheticDefaultImports": true,
        "fullTemplateTypeCheck": true,
        "strictInjectionParameters": true
    }
}
